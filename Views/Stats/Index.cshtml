@model IEnumerable<KickballCats.Models.Stats>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Runs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kicks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamLetDowns)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamSaver)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Injuries)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Drinks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Runs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kicks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamLetDowns)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamSaver)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Injuries)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Drinks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Game.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
